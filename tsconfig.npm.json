{
  "compilerOptions": {
    "target": "esnext",                   
    "module": "esnext",                   
    "moduleResolution": "node",          
    "lib": ["esnext"],                    
    "jsx": "react-jsx",                  
    "esModuleInterop": true,             
    "skipLibCheck": true,                 
    "strict": true,                       
    "resolveJsonModule": true,            
    "isolatedModules": true,              
    "incremental": true,                 
    "declaration": true,                
    "declarationMap": true,              
    "outDir": "dist",                    
    "rootDir": "src",                    
    "allowJs": true,                      
    "noEmit": false,                      
    "baseUrl": ".",                       
    "paths": {
      "@/*": ["src/*"]                    
    }
  }
}
